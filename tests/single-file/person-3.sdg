struct Person = {
    name: String,
    age: Int,
    foo: Foo,
};

struct Foo = {
    f1: Int,
    f2: Int,
    bar: Bar,
};

struct Bar = {
    f3: Int,
    f4: Int,
};

let p1 = Person {
    name: "p1",
    age: 99,
    foo: Foo {
        f1: 1,
        f2: 2,
        bar: Bar {
            f3: 3,
            f4: 4,
        },
    },
};

let p2 = p1 `foo.bar.f3 100;

assert p1.foo.bar.f3 == 3;
assert p2.foo.bar.f3 == 100;
