mod built_in_fns;

fn index_list<T>(ls: [T], i: Int) -> T = {
    if 0 <= i && i < ls.len() {
        // The first element is for the length of the list
        built_in_fns.read_compound(ls, i + 1)
    }

    else if -ls.len() <= i {
        built_in_fns.read_compound(ls, i + ls.len() + 1)
    }

    else {
        // TODO: error message
        panic()
    }
};

fn div_int(a: Int, b: Int) -> Int = {
    if b == 0 {
        // TODO: error message
        panic()
    }

    else {
        built_in_fns.div_int(a, b)
    }
};
